.container {  
  padding: 0px;
  position: relative;  
  background-color: #eeeeee;  
  color:  #1a1818;  
}
.page-section-spacing{
  margin-top: 30px;
}
.scroll-view_H{
  white-space: nowrap;
}
.scroll-view-item{
  height: 150px;
}

.advertisement-title{
  display: block;
  width: 100%;
  text-align: center;
  color: #333;
}
.swiper-item{
  display: block;
  height: 150px;
}
.item_left{ 
padding: 6px 0; 
}
.item_right{ 
    position: absolute; 
    right: 0;
    width: 50%; 
    height: 1000px; 
    padding: 10px; 
  } 
  .item {
    width: 48%;
    margin: 1%;
    display: inline-block;
    vertical-align: top;
   }
   .title{
    border: lightgrey;
    border-style: solid;
    border-width: 1px;
    font-size: 14px;
    border-bottom-left-radius: 5px;
    border-top-left-radius: 5px;
    border-bottom-right-radius: 5px;
    border-top-right-radius: 5px;
   }
   .btn-search {
    border-radius: 0px;
    border-bottom-right-radius: 5px;
    border-top-right-radius: 5px;
    font-size: 13px;
    font-family: "微软雅黑";
  }
  .input-search {
    border: rgb(5, 153, 25);
    border-style: solid;
    border-width: 1px;
    font-size: 14px;
    border-bottom-left-radius: 5px;
    border-top-left-radius: 5px;
    height: 31px;
    padding-left: 10px;
  }
  .search-cell {
    margin-top: 7px;
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
  }