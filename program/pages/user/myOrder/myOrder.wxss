/* pages/user/myOrder.wxss */
.orders {
  background-color: #eeeeee;
  height: 100%;
}
.order {
  background-color: white;
  width: 100%;
  height: 20%;
  margin-top: 10px;
  margin-bottom: 8px;
  margin-left: 5px;
  margin-right: 5px;
  border: solid white;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;

  display: flex;
  flex-direction: row;
}

.order image {
  width: 96px;
  height: 96px;
  padding-left: 10px;
}

.order_info {
  display: flex;
  flex-direction: column;
  padding-left: 20px;
  margin-bottom: 30px;
}