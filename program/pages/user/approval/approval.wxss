/* pages/user/approval/approval.wxss */
.orders {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #eeeeee;
}

.order_approval {
  background-color: white;
  width: 100%;
  height: 15%;
  margin-top: 10px;
  margin-bottom: 8px;
  margin-left: 5px;
  margin-right: 5px;
  border: solid white;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;

  display: flex;
  flex-direction: row;
}

.order_approval image {
  width: 96px;
  height: 90%;
  padding-left: 10px;
}

.order_approval .info {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}
.info text {
  text-align: left;
  font-size: medium;
}
.approval {
  display: flex;
  flex-direction: row;

  margin-top: 10px;
}
.approval .t {
  text-align: left;
  font-size: 14px;
  width: 80px;
}
.approval .er {
  margin-left: -12px;
  color: cornflowerblue;
}

.btn {
  margin-left: 50px;
  display: flex;
  flex-direction: row;
}

.refuse {
  background-color: crimson;
  color: white;
  width: 50px;
  height: 20px;
  font-size: 10px;
  padding-bottom: 10px;
}
.allow {
  background-color: limegreen;
  color: white;
  width: 50px;
  height: 20px;
  font-size: 10px;
  padding-bottom: 10px;
}

.ttt {
  margin-left: 40px;
  color: forestgreen;
}

