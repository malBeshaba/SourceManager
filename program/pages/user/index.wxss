.container{
  padding: 0px;
  width: 100%;
  height: 100vh;
}
.userInfo{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userInfo-avatar{
  width: 128px;
  height: 128px;
  margin: 20px;
  border: 1px solid black;
  border-radius: 50%;
}

.userInfo-nickname{
  margin-bottom: 20px;
  color: black;
}
.icon{
  /* border-bottom:1px solid #EDEDED;  */
  display: flex;
  flex-direction: column;
}
.icon text{
  display: block;
  align-items: center;
  justify-content: center;  
  font-size: 14px;
  color: #333;
  padding-top: 5px;
}