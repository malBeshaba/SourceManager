.container{
  padding: 0px;
  width: 100%;
  height: 100vh;
}
.userInfo{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userInfo-avatar{
  width: 128px;
  height: 128px;
  margin: 20px;
  border: 1px solid black;
  border-radius: 50%;
}

.userInfo-nickname{
  margin-bottom: 20px;
  color: black;
}
.title{
  padding: 10px 0;
}

.title text{
  display: block;
  width: 100%;
  text-align: center;
  color: #333;
}

.title .cn{
  font-size: 16px;
}
.title .en{
  font-size: 12px;
}

