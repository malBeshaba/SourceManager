.container {
  background-color: #eeeeee;
}
.items {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  /* background-color: white; */
}
.items .item {
  width: 150px;
  height: 170px;
  margin-top: 10px;
  margin-left: 2%;
  background-color: white;
}

.item:nth-child(2n+1) {
  margin-right: 8px;
}

.items .item image {
  width: 150px;
  height: 120px;
}

.items .item .label {
  width: 150px;
  height: 20px;
  flex-direction: row;
}

.items .item .label text {
  margin-left: 15px;
  font-size: 14px;
}

.items .item .label .hot {
  margin-top: -25px;
  margin-left: 100px;
  flex-direction: row;
}

.items .item .label .hot image {
  width: 10px;
  height: 10px;
  margin-right: -12px;
}
.items .item .label .hot text {
  font-size: 10px;
  color: lightgray;
}

