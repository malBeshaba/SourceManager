/* pages/cart/orderList/orderList.wxss */
form {
  width: 100%;
  height: 100%;
  background-color: #eeeeee;
}
.source_info {
  width: 100%;
  height: 20%;
  display: flex;
  flex-direction: row;
  background-color: white;
}
.div-line{
  background: #E0E3DA;
  width: 100%;
  height: 3rpx;
}
.source_info image {
  height: 90%;
  width: 90px;
  margin-left: 5px;
}
.info {
  display: flex;
  flex-direction: column;
  width: 80%;
}
.info .title {
  text-align: left;
  margin-top: 5%;
  margin-left: 10%;
}
.info .price {
  display: flex;
  flex-direction: row;
  text-align: left;
  margin-top: 5%;
  margin-left: 10%;
}

.info .price .money {
  color: red;
  padding-left: 2px;
}

.section_gap {
  margin-top: 31px;
  background-color: white;
  border-top-right-radius: 10px;
  border-top-left-radius: 10px;
  display: flex;
  flex-direction: column;
}
.section_gap checkbox-group {
  display: flex;
  flex-direction: column;
}

.checkbox {
  margin-top: 10px;
  margin-bottom: 10px;
}